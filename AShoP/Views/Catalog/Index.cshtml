@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>AShoP - Catalog</h2>
<div style="display: flex; flex-direction: column; width: 100%; height: 100vh; gap: 5px">
    <div style="display: flex; background-color: #0a53be; width: 100%; height:6%; align-items: center; padding-left: 10px;">
        <a href="/">Home</a>
        <span> > </span>
        @if (ViewBag.Breadcrumbs != null)
        {
            @foreach (var category in ViewBag.Breadcrumbs)
            {
                <a href="/?id=@category.Id">@category.Name</a>
                <span> > </span>
            }
        }
    </div>
    <div style="display: flex; width: 100%; height: 90%; flex-direction: row; gap: 5px">
        <div style="display: flex; width: 15%; background-color: #0c4128; flex-direction: column; padding-left: 10px">
            @foreach (var category in ViewBag.Categories)
            {
                <a href="/?id=@category.Id">@category.Name</a>
            }
        </div>
        <div style="display: grid; background-color: #6610f2; flex-grow: 1; grid-template-columns: repeat(3,minmax(0,1fr))">
            @foreach (var item in ViewBag.Items)
            {
                <div style="display: flex; flex-direction: column; padding: 5px; text-align: center;">
                    <img src="@item.Photo"/>
                    <span>@item.Name</span>
                    <span>@item.Price</span>
                    <button>Details</button>
                </div>
            }
        </div>
    </div>

</div>